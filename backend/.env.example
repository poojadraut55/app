# Database Configuration
MONGO_URL=mongodb://localhost:27017
DB_NAME=safdo_crypto_shield

# CORS Configuration
CORS_ORIGINS=*

# Notification Settings (DRY-RUN MODE)
NOTIFICATION_DRY_RUN=true

# Discord Webhook (optional - for actual notifications)
# Get from: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# SMTP Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Generic Webhook (optional)
GENERIC_WEBHOOK_URL=

# IPFS/Web3.Storage Configuration (optional)
# Get token from: https://web3.storage/
WEB3_STORAGE_TOKEN=
MAX_FILE_SIZE_MB=10

# Sentry Error Tracking (optional)
SENTRY_DSN=
